                <a asp-area="Admin" asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning">Edit</a>
                <a asp-area="Admin" asp-controller="Event" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete</a>
            }*@
        </div>
    </div>
</div>