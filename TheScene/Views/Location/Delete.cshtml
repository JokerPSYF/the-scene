@model DeleteLocationModel

@{
    ViewBag.Title = $"Delete {Model.Name}";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete" class="text-center">
    <div class="container text-center">
         
            <div class="card border-0" style="background-color: #6da14d !important; font-size: 20px;">
                <p style="font-size:25px !important;">Location: <u>@Model.Name, @Model.Address</u></p>
                <p>PlaceType: <b>@Model.PlaceType</b></p>
                @if (Model.Seats.HasValue)
                {
                    <p>Seats: <b>@Model.Seats</b></p>
                }
                <p><b>Are you sure you want to delete this?</b></p>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
      
    </div>
</form>